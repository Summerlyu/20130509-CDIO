<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="edu.fjnu.hotelsys.domain">

   <class name="User" table="users">
      <id name="userNo" column="user_no" type="string" length="6">
         <generator class="assigned"/>
      </id>
      <property name="userName" column="user_name" type="string" length="30" not-null="true"></property>
      <property name="userPwd" column="user_pwd" type="string" length="6" not-null="true"></property>
   </class>
   
</hibernate-mapping>
